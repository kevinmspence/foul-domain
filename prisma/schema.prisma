generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Show {
  id           Int            @id @map("showid")
  showDate     DateTime       @map("showdate")
  artistId     Int?
  artistName   String?        @map("artist_name")
  venue        String
  city         String
  state        String
  country      String
  setlistNotes String?        @map("setlistnotes")
  rawData      Json?          @map("raw_data")
  footnote     String?
  entries      SetlistEntry[]
}

model SetlistEntry {
  id         Int     @id @default(autoincrement())
  showId     Int     @map("showid")
  sequence   Int
  setNumber  Int?    @map("set")
  song       String
  transition Int?
  rawData    Json?   @map("raw_data")
  footnote   String?
  show       Show    @relation(fields: [showId], references: [id])
}
